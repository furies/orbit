{% extends "furiesorbitBundle::baselayout.html.twig" %}
{% form_theme form 'furiesorbitBundle::formfields.html.twig' %}
{% block pageheading %}

                    <h1>
                        New Customer
                    </h1>
{% endblock %}



		{% block content %}
		 <div class="row">
                        <!-- left column -->
                        <div class="col-md-6">
                            <!-- general form elements -->
                            <div class="box box-primary">
                                <div class="box-header">
                                    <h3 class="box-title">Customer Details</h3>
                                </div><!-- /.box-header -->
                                <!-- form start -->
                                <form role="form">

   					{{ form_errors(form) }}
						 <div class="box-body">
                                  	         	<div class="form-group">

                                  	         	<div class="form-group">
    							   		 {{ form_label(form.doe) }}
   									 {{ form_widget(form.doe, { 'attr': {'class': 'form-control'} }) }}
                                        	 	 </div>
								<div class="row">
									<div class="col-xs-2">
    							   		 {{ form_label(form.title) }}
   									 {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
									</div>
								</div>
                                        	 	 </div>

                                  	         	<div class="form-group">
    							   		 {{ form_label(form.name) }}
   									 {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                                        	 	 </div>

                                  	         	<div class="form-group">
    							   		 {{ form_label(form.doorno) }}
   									 {{ form_widget(form.doorno, { 'attr': {'class': 'form-control'} }) }}
                                        	 	 </div>

                                  	         	<div class="form-group">
    							   		 {{ form_label(form.address) }}
   									 {{ form_widget(form.address, { 'attr': {'class': 'form-control'} }) }}
                                        	 	 </div>

                                  	         	<div class="form-group">
    							   		 {{ form_label(form.address1) }}
   									 {{ form_widget(form.address1, { 'attr': {'class': 'form-control'} }) }}
                                        	 	 </div>

                                  	         	<div class="form-group">
    							   		 {{ form_label(form.address2) }}
   									 {{ form_widget(form.address2, { 'attr': {'class': 'form-control'} }) }}
                                        	 	 </div>

                                  	         	<div class="form-group">
    							   		 {{ form_label(form.city) }}
   									 {{ form_widget(form.city, { 'attr': {'class': 'form-control'} }) }}
                                        	 	 </div>

                                  	         	<div class="form-group">
    							   		 {{ form_label(form.pin) }}
   									 {{ form_widget(form.pin, { 'attr': {'class': 'form-control'} }) }}
                                        	 	 </div>

                                  	         	<div class="form-group">
    							   		 {{ form_label(form.custType) }}
   									 {{ form_widget(form.custType, { 'attr': {'class': 'form-control'} }) }}
                                        	 	 </div>

					
						<div>
                                    <div class="box-footer">
                                  	         	<div class="form-group">
   									<input type="submit" />
                                        	 	 </div>				

                                    </div>

                                </form>

                            </div><!-- /.box -->
			</div><!--/.col-md-6>
		</div>
		{% endblock %}



